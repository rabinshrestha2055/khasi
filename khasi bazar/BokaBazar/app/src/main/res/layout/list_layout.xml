<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardvieW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">


        <RelativeLayout

            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="0dp"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="130dp"
                android:layout_height="103dp"
                android:padding="7dp"
                android:src="@drawable/sarlahi1" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/imageView"
                android:text="Khasi on sale:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/textViewShortDesc"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitle"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/imageView"
                android:text="Sarlahi ko pure local munde khasi bikri maa chaa. kinna ichukaharuly samparka..."
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/Address"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewShortDesc"
                android:layout_marginLeft="129dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/imageView"
                android:background="#ffffff"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:text="-Sarlahi, Baylbash-7"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_above="@+id/Name"
                android:layout_marginStart="27dp"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@+id/textviewWeight"
                android:src="@drawable/location1" />

            <TextView
                android:id="@+id/textviewWeight"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textViewShortDesc"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="-17dp"
                android:layout_toRightOf="@id/imageView"
                android:background="#ffffff"
                android:paddingLeft="0dp"
                android:paddingRight="15dp"
                android:text="15kg"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/Name"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textViewShortDesc"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="-35dp"
                android:layout_toRightOf="@id/imageView"
                android:background="#ffffff"
                android:paddingLeft="0dp"
                android:paddingRight="15dp"
                android:text="Gagan Puri"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/textViewShortDesc"
                android:layout_alignBottom="@+id/Address"
                android:layout_marginStart="134dp"
                android:layout_marginLeft="139dp"
                android:layout_marginBottom="-35dp"
                android:layout_toRightOf="@id/imageView"
                android:background="#ffffff"
                android:text="Rs. 15,000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Date"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/textViewShortDesc"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="-53dp"
                android:layout_toRightOf="@id/imageView"
                android:background="#ffffff"
                android:text="11/5/2076"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textSize="10sp" />

            <TextView
                android:visibility="invisible"
                android:id="@+id/color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="15dp"
                android:text="color" />
            <TextView
                android:visibility="invisible"
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="15dp"
                android:text="age" />
            <TextView
                android:visibility="invisible"
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="15dp"
                android:text="num" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
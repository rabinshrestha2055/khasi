<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:background="@color/colorOrange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <TextView
               android:textSize="18sp"
               android:textColor="@color/colorWhite"
               android:text="Profile"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.Toolbar>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewprofileUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="244dp"
            android:elevation="100dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardview2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp">
                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User:"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/darker_gray" />

                <RelativeLayout
                    android:paddingStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:paddingLeft="1dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp">
                    <androidx.cardview.widget.CardView
                        android:backgroundTint="@color/colorWhite"
                        app:cardCornerRadius="10dp"
                        android:id="@+id/carduserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:id="@+id/userName"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full Name ="/>

                        <TextView
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:hint="Enter your name"
                            android:id="@+id/EnterName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_toEndOf="@+id/userName"
                            android:padding="10dp"
                            android:textSize="12sp" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:backgroundTint="@color/colorWhite"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/carduserName"
                    android:id="@+id/carduserEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/userEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="10dp"
                        android:text="EMAIL="
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:hint="Enter Your Email"
                        android:id="@+id/EnterEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/userEmail"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:backgroundTint="@color/colorWhite"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/carduserEmail"
                    android:id="@+id/carduserContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/userContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:padding="10dp"
                        android:text="CONTACT="
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:hint="Enter Your Contact"
                        android:id="@+id/EnterContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_toEndOf="@+id/userContact"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:backgroundTint="@color/colorWhite"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/carduserContact"
                    android:id="@+id/carduserLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/userLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:padding="10dp"
                        android:text="LOCATION="
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                    <TextView
                        android:hint="Enter Your Location"
                        android:id="@+id/EnterLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_toEndOf="@+id/userLocation"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </RelativeLayout>

                </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:backgroundTint="@color/colorPrimaryDark"
                        app:cardCornerRadius="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="170dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp">
                        <Button
                            android:id="@+id/EditButton"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"


                            android:background="@drawable/text_shape"
                            android:text="Edit"
                            android:textColor="@color/gradStart" />


                    </androidx.cardview.widget.CardView>

                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
        android:id="@+id/cardviewadvertisement"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_marginTop="244dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advertisement:"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/AdrecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    </LinearLayout>>
</ScrollView>